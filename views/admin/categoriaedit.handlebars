{{#each erros}}
  <div class="alert alert-danger" role="alert">
    {{texto}}
  </div>
{{else}}
{{/each}}
<h3>Editar categoria:</h3>
<div class="card">
  <div class="card-body">
    <form action="/admin/categorias/edit" method="post">
      
        <input type="hidden" name="id" value="{{cate._id}}">
        <label for="name">Nome: </label>
          <input type="text" name="name" class="form-control" placeholder="Nome da categoria..." value="{{cate.name}}">
        <label for="slug">Slug: </label>
          <input type="text" name="slug" class="form-control" placeholder="Slug da categoria..." value="{{cate.slug}}">
        <button class="btm btn btn-success mt-3" type="submit">Editar Categoria</button>
    </form>
  </div>
</div>
