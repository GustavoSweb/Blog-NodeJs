{{#each erros}}
  <h5 class="alert alert-danger">{{texto}}</h5>
{{else}}
{{/each}}

<div class="card">
  
  <div class="card-body">
    <h3>Nova Postagen</h3>
    <form action="/admin/postagem/nova" method="post">
      
      <label for="titulo">Titulo: </label>
      <input type="text" name="titulo" class="form-control">
      <label form="slug">Slug: </label>
      <input type="text" name="slug" class="form-control">
      <label for="descricao">Descrição: </label>
      <input type="text" name="descricao" class="form-control">
      <label for="conteudo">Conteudo: </label>
      <textarea name="conteudo" class="form-control"></textarea>
      <label for="categoria">Categorias: </label>
      <select name="categoria" class="form-select">
        {{#each cate}}
        <option value="{{_id}}">{{name}}</option>
        {{else}}
                <option value="0">Não a nenhuma categoria </option>
        {{/each}}
      </select>
      <button type="submit" class="btn btn-success mt-3">Postar</button>
    </form>
  </div>
</div>
